<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/margin_2dp"
    app:cardElevation="@dimen/margin_2dp"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/margin_16dp"
      android:orientation="vertical"
      >
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/projectNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_2dp"
        android:fontFamily="@font/andada"
        android:maxLines="2"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/font_size_20sp"
        app:autoSizeTextType="uniform"
        />

    <TextView
        android:id="@+id/createdAtTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:fontFamily="@font/andada"
        android:textColor="@color/grey"
        android:textSize="@dimen/font_size_10sp"
        />

    <TextView
        android:id="@+id/projectDescTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:fontFamily="@font/andada"
        android:textAppearance="?attr/textAppearanceListItemSmall"
        />

    <TextView
        android:id="@+id/updatedAtTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/andada"
        android:textColor="@color/grey"
        android:textSize="@dimen/font_size_10sp"
        />
  </LinearLayout>
</android.support.v7.widget.CardView>